server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    # Redirect root to the Node-RED dashboard
    location = / {
        return 302 /dashboard/;
    }

    # Normalize /admin without trailing slash
    location = /admin {
        return 302 /admin/;
    }

    # Admin mini PHP app (served under /admin/)
    location = /admin/ {
        rewrite ^ /admin/index.php last;
    }

    location /admin/ {
        alias /var/www/openscan-admin/;
        index index.php;
        try_files $uri $uri/ /admin/index.php?$args;
    }

    # PHP handler for the admin app
    location ~ ^/admin/(.+\.php)$ {
        alias /var/www/openscan-admin/$1;
        include fastcgi.conf;
        fastcgi_param SCRIPT_FILENAME /var/www/openscan-admin/$1;
        fastcgi_pass 127.0.0.1:9000;
    }

    # Proxy all requests to Node-RED on localhost:1880
    location / {
        proxy_pass http://127.0.0.1:1880;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 600s;
    }
}

